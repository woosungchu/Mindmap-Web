<div class="container">
  <div class="row">
    <div class="hot-maps col-sm-8">
      <ul>
        {{#each sortedHotMaps as |mapUnit|}}
        <li class="panel panel-default">{{map-list-panel map=mapUnit}}</li>
        {{/each}}
      </ul>
    </div>

    <div class="user-maps col-sm-4">
      {{#link-to "maps.new" class="map-new btn btn-primary" }}New Map{{/link-to}}
      <ul>
        {{#each sortedUserMaps as |mapUnit|}}
        <li>{{map-list-item map=mapUnit}}</li>
        {{/each}}
      </ul>
    </div>
  </div>
</div>
{{outlet}}
